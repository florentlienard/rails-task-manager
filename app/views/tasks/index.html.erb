<div class="container">
<div class="row text-center">
    <h1>Voici l'ensemble des tâches</h1>
    <% @tasks.each_with_index do |task, index| %>
    <li>
      <%= index + 1 %> - <%= link_to task.name, task_path(task.id) %> - <%= link_to "edit", edit_task_path(task.id) %> - <%= link_to 'delete', task_path(task), method: :delete %>
    </li>
        <% end %>
    <div class="col-md-4 col-md-offset-4">
      <div class="btn btn-primary form-control">
        <p><%= link_to "Nouvelle tâche", new_task_path%></p>
     </div>
    </div>

  </div>
</div>
